<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AddDrill"
    android:background="@color/dgreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/dgreen"
        android:weightSum="10">
        <ImageButton
            android:id="@+id/tomainbtnfromadddrill"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:contentDescription="tomain"
            android:src="@drawable/tczlogo" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_margin="8dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/lightBg">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Drill"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:background="@color/yellow"
                        android:textColor="@color/dgreen"
                        android:layout_marginBottom="16dp"/>

                    <!-- Name -->
                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Drill Name"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:drawable/editbox_background_normal"/>

                    <!-- Explanation -->
                    <EditText
                        android:id="@+id/editExplanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Explanation"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:drawable/editbox_background_normal"/>

                    <!-- Time -->
                    <EditText
                        android:id="@+id/editTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Time"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:drawable/editbox_background_normal"/>


                    <!-- Min/Max Players -->
                    <EditText
                        android:id="@+id/editMinPlayers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Minimum Players"
                        android:inputType="number"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:drawable/editbox_background_normal"/>

                    <EditText
                        android:id="@+id/editMaxPlayers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Maximum Players"
                        android:inputType="number"
                        android:padding="12dp"
                        android:layout_marginBottom="18dp"
                        android:background="@android:drawable/editbox_background_normal"/>

                    <!-- Training Tools -->
                    <EditText
                        android:id="@+id/editTrainingTools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Training Tools"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:drawable/editbox_background_normal"/>

                    <!-- Age -->
                    <EditText
                        android:id="@+id/editAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Age"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:drawable/editbox_background_normal"/>


                    <!-- Ball Color Spinner -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ball Color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dgreen"
                        android:layout_marginTop="10dp"/>

                    <Spinner
                        android:id="@+id/spinnerBallColor"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Court Size Spinner -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Court Size"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dgreen"/>

                    <Spinner
                        android:id="@+id/spinnerCourtSize"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="12dp"
                        android:layout_marginBottom="18dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Player level"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dgreen"/>
                    <Spinner
                        android:id="@+id/spinnerPlayerLevel"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="12dp"
                        android:layout_marginBottom="18dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Physical level"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dgreen"/>
                    <Spinner
                        android:id="@+id/spinnerPhysicalLevel"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="12dp"
                        android:layout_marginBottom="18dp"/>

                    <!-- Skills -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Skills Included"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/dgreen"
                        android:layout_marginBottom="10dp"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:useDefaultMargins="true">

                        <CheckBox android:id="@+id/checkForehand" android:text="Forehand"/>
                        <CheckBox android:id="@+id/checkBackhand" android:text="Backhand"/>
                        <CheckBox android:id="@+id/checkVolleyForehand" android:text="Volley Forehand"/>
                        <CheckBox android:id="@+id/checkVolleyBackhand" android:text="Volley Backhand"/>
                        <CheckBox android:id="@+id/checkDriveForehand" android:text="Drive Forehand"/>
                        <CheckBox android:id="@+id/checkDriveBackhand" android:text="Drive Backhand"/>
                        <CheckBox android:id="@+id/checkServe" android:text="Serve"/>
                        <CheckBox android:id="@+id/checkSmash" android:text="Smash"/>
                        <CheckBox android:id="@+id/checkForwardForehand" android:text="Forward Forehand"/>
                        <CheckBox android:id="@+id/checkForwardBackhand" android:text="Forward Backhand"/>
                    </GridLayout>

                    <!-- YouTube -->
                    <EditText
                        android:id="@+id/etcoachv"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Coach View (youtube link)"
                        android:padding="10dp"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/etincourtview"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="In court view (youtube link)"
                        android:padding="10dp"
                        android:layout_marginBottom="18dp"/>

                    <!-- GIF -->
                    <Button
                        android:id="@+id/btSelectGif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select GIF"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/yellow"
                        android:textColor="@color/black"/>

                    <!-- Submit -->
                    <Button
                        android:id="@+id/addsubmitbtn"
                        android:text="Submit"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/yellow"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"/>

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
